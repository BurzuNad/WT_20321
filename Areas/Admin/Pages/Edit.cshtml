@model VT_20321.Areas.Admin.EditModel

@{ ViewData["Title"] = "Edit"; }

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatalogItem.Id" />
            <div class="form-group">
                <label asp-for="CatalogItem.Name" class="control-label"></label>
                <input asp-for="CatalogItem.Name" class="form-control" />
                <span asp-validation-for="CatalogItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatalogItem.Technology" class="control-label"></label>
                <input asp-for="CatalogItem.Technology" class="form-control" />
                <span asp-validation-for="CatalogItem.Technology" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatalogItem.Price" class="control-label"></label>
                <input asp-for="CatalogItem.Price" class="form-control" />
                <span asp-validation-for="CatalogItem.Price" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="CatalogItem.Image" class="control-label"></label>
                <input asp-for="CatalogItem.Image" class="form-control" />
                <span asp-validation-for="CatalogItem.Image" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.CatalogItem.Image))
                {
                    <img src="~/images/@Model.CatalogItem.Image" alt="NoSuchFile" width="150" />
                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="custom-file mt-3">
                    <input type="file" class="custom-file-input" asp-for="Image" id="customFile">
                    <label class="custom-file-label" for="customFile">
                        Выберите файл изображения
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CatalogItem.Category.CatalogCategoryName" class="control-label"></label>
                <select asp-for="CatalogItem.CatalogCategoryId" class="form-control" asp-items="ViewBag.CatalogCategoryId"></select>
                <span asp-validation-for="CatalogItem.Category.CatalogCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/bs-custom-file-input.js"/>
    <script>
        bsCustomFileInput.init();
    </script> }